doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Order Summary Component
    link(rel="stylesheet", href="./style.css")
  body 
    .component 
      .card
        img.card__image(src="./images/illustration-hero.svg", alt="hero")
        .card__content
          h1.card__header Order Summary
          p.card__text You can now listen to millions of songs, audiobooks, and podcasts on any device anywhere you like!
          .card__annual 
            .card__box
              img.card__icon(src="./images/icon-music.svg", alt="icon")
              .card__block
                p.card__title Annual Plan
                p.card__subtitle $59.99/year
            a.card__link(href="#") Change
          .card__button
            a.card__button_link(href="#") 
              .card__button_blue 
                span Proceed to Payment 
            a.card__button_link(href="#") 
              .card__button_transparent 
                span Cancel Order